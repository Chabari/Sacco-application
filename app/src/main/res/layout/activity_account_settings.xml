<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_layout4"
    android:background="@drawable/gradient_animation_list"
    tools:context="com.george.mhadhirisaccoltd.Account.AccountSettings">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:id="@+id/imgProfile_account"
                android:background="@color/grey"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:contentPadding="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_firstname_account"
                            android:hint="First Name"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/personicon"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_lastname_account"
                            android:hint="Last Name"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/personicon"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_id_account"
                            android:hint="ID Number"
                            android:inputType="number"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/idicon"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_phone_number_account"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/phoneicon"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_email_account"
                            android:hint="email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/ic_email_black_24dp"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <Spinner

                        android:id="@+id/spinner_university_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:entries="@array/Universities"
                        android:layout_marginBottom="8dp">

                    </Spinner>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:id="@+id/submit_profile"
                android:layout_gravity="center"
                android:text="Submit"
                android:theme="@style/PrimaryButton"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
