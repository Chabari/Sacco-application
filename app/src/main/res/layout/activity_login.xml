<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:background="@drawable/gradient_animation_list"
    android:orientation="vertical"
    tools:context="com.george.mhadhirisaccoltd.Account.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_launcher"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:contentPadding="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_email_login"
                            android:hint="email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/ic_email_black_24dp"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/Gray"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_password_login"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:textColorHint="@color/Gray"
                            android:drawableLeft="@drawable/passicon"
                            android:drawablePadding="10dp"
                            android:layout_marginBottom="2dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:id="@+id/btn_login"
                android:layout_gravity="center"
                android:text="login"
                android:theme="@style/PrimaryButton"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/btn_forgot"
                android:gravity="right"
                android:text="forgot password"
                android:theme="@style/PrimaryFlatButton"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:id="@+id/btn_create_account"
                android:text="No Account? Create here"
                android:theme="@style/PrimaryButtonTwo"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
