<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_layout2"
    android:background="@drawable/gradient_animation_list"
    tools:context="com.george.mhadhirisaccoltd.Account.Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Email Account"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <com.hanks.htextview.typer.TyperTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:charIncrease="3"
                android:id="@+id/animatedtTextVie"
                app:typerSpeed="80"
                android:text="Password link will be sent to your provided email,please make sure the email is active and valid"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/white"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:contentPadding="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/edt_email_account"
                            android:hint="email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/Gray"
                            android:drawableRight="@drawable/ic_email_black_24dp"
                            android:drawableTintMode="multiply"
                            android:drawablePadding="10dp"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:id="@+id/btn_create_account_account"
                android:layout_gravity="center"
                android:text="create account"
                android:theme="@style/PrimaryButton"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:id="@+id/btn_have_account"
                android:text="Already have an  account"
                android:theme="@style/PrimaryButtonTwo"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
