<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:id="@+id/Linear_layout5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:layout_marginLeft="2dp"
                android:id="@+id/tvfullname_loan_approvaldisplay"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:layout_marginLeft="2dp"
                android:id="@+id/tvidnumber_loan_approvaldisplay"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_phone_loan_approvaldisplay"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_amount_loan_approvaldisplay"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan type"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_loantype_loan_approvaldisplay"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>