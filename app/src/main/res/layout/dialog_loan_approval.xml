<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.george.mhadhirisaccoltd.MainIssues.Loans.LoanApproval">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loan Appoval"
        android:textAlignment="center"
        android:background="@color/blue"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/tv_loan_details"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnDecline_loan"
            android:theme="@style/PrimaryButtonTwo"
            android:text="Decline"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnAccept_loan"
            android:theme="@style/PrimaryButton"
            android:text="Accept"
            android:textColor="@color/Black"/>
    </LinearLayout>


</LinearLayout>
